<odoo>
    <data>

        <!-- res.partner inherit form view -->
        <record id="sport_partner_form" model="ir.ui.view">
            <field name="name">res.partner.inherit.sport.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <div name="button_box" position="inside">
                    <button class="oe_stat_button" name="%(action_subscription_partner_list)d" type="action" icon="fa-user-circle">
                        Inscriptions
                    </button>
                </div>

                <page name="sales_purchases" position="after">
                    <page string="Compte Sport" name="account">
                        <group>
                            <field name="account_id" />
                        </group>
                    </page>
                </page>

                <field name="lang" position="after">
                    <field name="is_coach" />
                </field>
            </field>
        </record>

    </data>
</odoo>