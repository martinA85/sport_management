<odoo>
  <data>


    <record model="ir.actions.act_window" id="action_sport_account">
      <field name="name">Account</field>
      <field name="res_model">sport.account</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="action_sport_type">
      <field name="name">Type course</field>
      <field name="res_model">sport.type_course</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="action_sport_card">
      <field name="name">Sport cards</field>
      <field name="res_model">sport.sport_card</field>
      <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="sport_management_menu" name="Sport" />

    <menuitem name="Account" id="menu_sport_account" parent="sport_management_menu" action="action_sport_account" sequence="1" />
    <menuitem name="Type course" id="menu_sport_type" parent="sport_management_menu" action="action_sport_type" sequence="2" />
    <menuitem name="Sport cards" id="menu_sport_card" parent="sport_management_menu" action="action_sport_card" sequence="3" />
  </data>
</odoo>