<odoo>
    <data>
        <record id="sport_card_view_search" model="ir.ui.view">
            <field name="name">sport.card.view.search</field>
            <field name="model">sport.subscription</field>
            <field name="arch" type="xml">
                <search string="Search cards">
                    <field name="client_id" operator="="/>
                    <field name="session_id" operator="="/>
                    <field name="state" operator="="/>
                </search>
            </field>
        </record>

        <record id="sport_subscription_view_form" model="ir.ui.view">
            <field name="name">sport.subscription.view.form</field>
            <field name="model">sport.subscription</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <header>
                            <button string="Subscribe"
                                    type="object"
                                    name="subscribe"
                                    attrs="{'invisible': [
                                            ('state', '=', 'sub'),
                                            ('state', '=', 'valid'),
                                            ('state', '=', 'absent')
                                        ]}"
                            />
                            <button string="Valid subscription"
                                    type="object"
                                    name="valid"
                                    attrs="{'invisible': [
                                            ('state', '=', 'valid'),
                                            ('state', '=', 'waiting'),
                                            ('state', '=', 'canceled'),
                                            ('state', '=', 'absent')
                                        ]}"
                            />
                            <button string="Cancel subscription"
                                    type="object"
                                    name="cancel"
                                    attrs="{'invisible': [
                                            ('state', '=', 'canceled'),
                                            ('state', '=', 'valid'),
                                            ('state', '=', 'absent')
                                        ]}"
                            />
                            <field name="state" widget="statusbar"/>
                        </header>
                        <group>
                            <field name="name"/>
                            <field name="client_id"/>
                            <field name="session_id"/>
                            <field name="sub_date"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

