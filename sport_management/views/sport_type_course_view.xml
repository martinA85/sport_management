<odoo>
    <data>
        <record id="sport_type_course_view_form" model="ir.ui.view">
            <field name="name">sport.type_course.view.form</field>
            <field name="model">sport.type_course</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="type_course_tree_view">
            <field name="name">Type activity list</field>
            <field name="model">sport.type_course</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="price" />
                </tree>
            </field>
        </record>

        <!-- sport.type_course form view -->
    </data>
</odoo>