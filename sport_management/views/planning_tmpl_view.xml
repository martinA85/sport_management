<odoo>
    <data>

        <!-- sport.planning_tmpl form view -->
        <record id="sport_planning_tmpl_view_form" model="ir.ui.view">
            <field name="name">sport.planning_tmpl.view.form</field>
            <field name="model">sport.planning_tmpl</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="session_tmpl_ids" />
                            <button name="generate_planning" type="object" class="btn-primary" string="Generate Planning"></button>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- wizard -->

        <!-- sport.planning_tmpl_wizard form view -->
        <record id="model_name_view_form" model="ir.ui.view">
            <field name="name">sport.planning_tmpl_wizard.view.form</field>
            <field name="model">sport.planning_tmpl_wizard</field>
            <field name="arch" type="xml">
                <form string="Générer planning">
                    <sheet>
                        <group>
                            <field name="planning_id" />
                            <field name="start_date" />
                            <field name="end_date" />
                        </group>
                        <footer>
                        <button name="generate_planning" type="object" string="Mettre à jour" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>